/* pages/search/search.wxss */
page{
  background: #f5f6fa;
}
.icon{

  height:110rpx;
  width:110rpx;
  border-radius: 50%;
  overflow: hidden;
  /* box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.25); */

}


.whitecard1 {
  display: flex;
  flex-direction: column;
  padding: 44rpx 0rpx;
  justify-content: start;
  align-items: center;
  position: absolute;
  top: 100rpx;
  width: 750rpx;
  min-height: 50vh;
  background: #f5f6fa;
  border-radius: 25px;
}

.list {
  margin-top: 0rpx;
  width: 100%;
}

.card {
  width: 100%;
  height: 100%;
  border-radius: 15px;
  box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.22);
}

.btn {
  background: linear-gradient(90deg, #4791FA 7.73%, rgba(20, 206, 247, 0.67) 115%), #FFFFFF;
  border-radius: 25px;
  border: 1px solid #26E4CE;
  box-sizing: border-box;
  font-family: SimHei;
  height: 75rpx;
  font-style: normal;
  font-weight: normal;
  font-size: 36rpx;
  line-height: 42rpx;
  text-align: center;
  color: #FFFFFF;
  /* box-shadow: 0px 0px 10px rgba(88, 208, 249, 0.39); */
}

.btn1 {
  height: 75rpx;
  background: #dfe4ea;
  border-radius: 25px;
  font-family: SimHei;
  font-style: normal;
  font-weight: normal;
  font-size: 36rpx;
  line-height: 42rpx;
  text-align: center;
  /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25); */
  color: rgba(0, 0, 0, 0.49);
}

.listcard {
  width: 95%;
  height: 260rpx;

  padding-bottom: 10rpx;
  margin-bottom: 7rpx;
}

.inputarea {
  width: 80%;
  background: #dfe4ea;
  border-radius: 15px;
}

.search-btn {
  height: 100rpx;
  border-radius: 25%;
  color: white;
}

.cardright {
  width: 70%;
  height: 100%;
  padding: 10rpx;
  border-top-right-radius:15px ;
  border-bottom-right-radius: 15px;
  background: white;

}
.cardleft {
  width: 30%;
  height: 100%;
  padding: 10rpx;
  border-top-left-radius:15px ;
  border-bottom-left-radius: 15px;
  background: white;

}